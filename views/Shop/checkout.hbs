<div class="row">
    <h1>Checkout</h1>
    <hr/>
    <div class="col-md-6">
        <div class="row">
            <div class="col-xs-12">
                <table class="table table-striped">
                    <thead>
                    <tr>
                        <th>Product Name</th>
                        <th>Quantity</th>
                        <th>Price</th>
                    </tr>
                    </thead>
                    <tbody>
                    {{# each products}}
                        <tr>
                            <td>{{ this.item.title }}</td>
                            <td>{{ this.qty }}</td>
                            <td>${{ this.price }}</td>
                        </tr>
                    {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
        {{# if coupons}}
            <hr/>
        <div class="row">
            <div class="col-xs-12">
                <h4>
                    Subtotal: ${{subtotal}}
                </h4>
            </div>
        </div>
            <div class="row">
                <div class="col-xs-12">
                    <table class="table table-striped">
                        <thead>
                        <tr>
                            <th>Coupon Code</th>
                            <th>Discount</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{# each coupons}}
                            <tr>
                                <td>{{this.couponCode}}</td>
                                <td>${{../this.totalDiscount}}</td>
                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        {{/if}}
        <div class="row">
            <div class="col-xs-12">
                <h4>Total: ${{total}}</h4>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12">
                <a href="/cart" class="btn btn-default" role="button">
                    <i class="fa fa-shopping-cart" aria-hidden="true"></i> Edit Cart</a>
            </div>
        </div>
    </div>
    <br/><br/>
    <div class="col-md-6">
        <div id="charge-error" class="alert alert-danger {{#if noError}}hidden{{/if}}">
            {{errMsg}}
        </div>
        <form action="/checkout" method="post" id="checkout-form">
            <div class="row">
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-name" class="sr-only">Card Holder Name</label>
                        <input type="text" id="card-name" class="form-control" placeholder="Card Holder Name" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="address" class="sr-only">Card Holder Address</label>
                        <input type="text" id="address" class="form-control" placeholder="Card Holder Address" required name="address">
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="form-group">
                        <label for="card-number" class="sr-only">Credit Card Number</label>
                        <input type="text" id="card-number" class="form-control" placeholder="Credit Card Number" required>
                    </div>
                </div>
                <div class="col-xs-12">
                    <div class="row">
                        <div class="col-xs-4">
                            <div class="form-group">
                                <label for="card-expiry-month" class="sr-only">Expiration Month</label>
                                <input type="text" id="card-expiry-month" class="form-control" placeholder="Expiration Month" required>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <div class="form-group">
                                <label for="card-expiry-year" class="sr-only">Expiration Year</label>
                                <input type="text" id="card-expiry-year" class="form-control" placeholder="Expiration Year" required>
                            </div>
                        </div>
                        <div class="col-xs-4">
                            <div class="form-group">
                                <label for="card-cvc" class="sr-only">CVC</label>
                                <input type="text" id="card-cvc" class="form-control" placeholder="CVC" required>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-default">Purchase</button>
        </form>
    </div>
</div>

<script type="text/javascript" src="https://js.stripe.com/v2/"></script>
<script type="text/javascript" src="javascripts/checkout.js"></script>